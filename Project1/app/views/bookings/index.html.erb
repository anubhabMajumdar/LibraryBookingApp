<p id="notice"><%= notice %></p>

<h1> Room Information</h1>
<body>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <li class="list-group-item">

      <th>Room</th>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        <th>Size</th>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        <th>Building</th>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        <!--<th>End time</th>&nbsp&nbsp&nbsp&nbsp-->
        <!--<th colspan="3"></th>-->
      </li>
    </div>
  </div>



  <div class="row">
    <div class="col-md-0 col-md-offset-1">
        <table>
          <tr>
            <th>Room</th>
            <% (0..23).each do |i| %>
              <th colspan="2"><%=i%></th>
            <%end%>
          </tr>
        <%@bookings.each do |booking| %>
            <tr>
              <th><%= booking.room_id %></th>
              <% (1..48).each do |i| %>
                  <% if i%2==0 %>
                    <th bgcolor="#00FF00"><%="30"%></th>
                  <% else %>
                    <th bgcolor="#00FF00"><%="00"%></th>
                  <%end%>
              <%end%>
            </tr>
          <% end %>
      </table>
    </div>
  </div>


  <h2>Please fill the form to book a room</h2>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">

      <%= form_for @newbooking do|f| %>
                <%= f.label :room_id %>
                <%= f.select :room_id, @roomids %>
                <% if @loginuser.Admin%>
                <%= f.label :name %>
                <%= f.select :name, @users %>
                <% end %>
                <%= f.label :Date %>
                <%= f.date_select :date %>

                <%= f.label :"Start-Time" %>
                <%= f.select :starttime, @hours %>

                <%= f.label :"End-Time" %>
                <%= f.select :endtime, @hours %>

                <%= f.submit "Book", class: "btn btn-primary"%>

          <%end%>
        </div>
      </div>


</body>

<%= link_to 'Back to Search Rooms', search_room_url %>
