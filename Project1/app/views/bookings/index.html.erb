<p id="notice"><%= notice %></p>

<h1> Room Information</h1>
<body>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <li class="list-group-item">

      <th>Room</th>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        <th>Size</th>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        <th>Building</th>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        <!--<th>End time</th>&nbsp&nbsp&nbsp&nbsp-->
        <!--<th colspan="3"></th>-->
      </li>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <%@bookings.each do |booking| %>
      <li class="list-group-item">

        <%= booking.room_id %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        <%= booking.size %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
        <%= booking.building %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp


      </li>
    <% end %>
      </div>
    </div>


<% @checkbookings =Booking.find_by_sql(" SELECT *
                                      FROM bookings
                                      WHERE username = 'user111' and date > #{Time.new.strftime('%Y-%m-%d')}") %>

  <% if(@checkbookings).equal?([])%>
      <h1> One user just can book a room unless you release your room </h1>

  <%else%>

  <h2>Please fill the form to book a room</h2>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">

      <%= form_for @newbooking do|f| %>
                <%= f.label :room_id %>
                <%= f.select :room_id, @roomids %>

                <%= f.label :username %>
                <%= f.text_field :username %>

                <%= f.label :Date %>
                <%= f.date_select :date %>

                <%= f.label :"Start-Time" %>
                <%= f.select :starttime, @hours %>

                <%= f.label :"End-Time" %>
                <%= f.select :endtime, @hours %>

                <%= f.submit "Book", class: "btn btn-primary"%>

          <%end%>
        </div>
      </div>

  <% end %>
</body>

<%= link_to 'Back to Search Rooms', search_room_url %>
